<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <item name="searchBackground">?attr/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>

    </style>

    <style name="TempTextView">
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="DescTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="HumidityTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="WindSpeedTextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="TextViewInColoredCard">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="SubTextViewInColoredCard">
        <item name="android:textColor">@color/grey_10</item>
    </style>

    <style name="IconInColoredCard">
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>